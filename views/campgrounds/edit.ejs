<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit: <%= campground.name %></h1>
        <div style="width:60%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control"  type="text" name="campground[name]" value="<%= campground.name %>">                
                </div>
                <div class="form-group">   
                    <label>Image Url</label>         
                    <input  class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">     
                    <label>Description</label>       
                    <textarea class="form-control" name="campground[description]" ><%= campground.description %></textarea>
                </div>
                <div class="form-group">                
                    <button class="btn btn-primary btn-lg btn-default btn-block"  type="submit">Submit</button>
                </div>
            </form>
        <a href="/campgrounds/<%= campground._id %>">Go Back</a>            
        </div>
    </div>    
</div>
    
<% include ../partials/footer %>