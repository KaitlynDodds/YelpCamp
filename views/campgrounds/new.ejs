<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a New Campground</h1>
        <div style="width:60%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control"  type="text" name="campground[name]" placeholder="name">                
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input class="form-control"  type="number" name="campground[price]" placeholder="price per night" min="0.01" step="0.01">
                </div>
                <div class="form-group"> 
                    <label>Image Url</label>           
                    <input  class="form-control" type="text" name="campground[image]" placeholder="image url">
                </div>
                <div class="form-group">  
                    <label>Description</label>          
                    <textarea class="form-control" name="campground[description]" placeholder="description"></textarea>
                </div>
                <div class="form-group">                
                    <button class="btn btn-primary btn-lg btn-default btn-block"  type="submit">Submit</button>
                </div>
            </form>
        <a href="/campgrounds">Go Back</a>            
        </div>
    </div>    
</div>
    
<% include ../partials/footer %>